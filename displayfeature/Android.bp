Common_CFlags = ["-Wall"]
Common_CFlags += ["-Werror"]
Common_CFlags += ["-Wno-unused-parameter"]

cc_binary {
    name: "vendor.nameless.hardware.displayfeature@1.0-service",
    init_rc: ["vendor.nameless.hardware.displayfeature@1.0-service.rc"],
    vintf_fragments: ["vendor.nameless.hardware.displayfeature@1.0-service.xml"],
    defaults: ["hidl_defaults"],
    relative_install_path: "hw",
    cflags: Common_CFlags,
    srcs: [
        "DisplayFeature.cpp",
        "service.cpp",
    ],
    shared_libs: [
        "libbase",
        "libbinder",
        "libbinder_ndk",
        "libhidlbase",
        "liblog",
        "libutils",
        "vendor.nameless.hardware.displayfeature@1.0",
        "vendor.oplus.hardware.touch-V1-ndk",
    ],
    proprietary: true,
}
